{
  "name": "trec",
  "version": "1.4.0",
  "description": "T-Rec time tracker is built for speed and live work item update in youtrack system.",
  "homepage": "https://github.com/hanzhinstas/timetracker",
  "author": {
    "name": "Kleder",
    "email": "biuro@kleder.eu"
  },
  "keywords": [
    "timetracking",
    "youtrack"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "ng": "ng",
    "lint": "ng lint",
    "start": "npm-run-all --parallel webpack:watch electron:serve",
    "prebuild": "ts-node git.version.ts",
    "webpack:watch": "webpack --watch",
    "start:web": "webpack-dev-server --content-base . --port 4200 --inline",
    "build:electron:main": "npm run prebuild && tsc main.ts --outDir dist && copyfiles package.json dist && cd dist && npm install --prod && cd ..",
    "build": "cross-env NODE_ENV=development webpack --display-error-details && npm run build:electron:main",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "electron:serve": "npm run build:electron:main && electron ./dist --serve",
    "electron:test": "electron ./dist",
    "electron:dev": "npm run build && electron ./dist",
    "electron:prod": "npm run build:prod && electron ./dist",
    "electron:linux": "npm run build:prod && node package.js --asar --platform=linux --arch=x64",
    "electron:windows": "npm run build:prod && node package.js --asar --platform=win32 --arch=x64",
    "electron:mac": "npm run build:prod && node package.js --platform=darwin --arch=x64",
    "create-installer-win": "node installers/windows/createinstaller.js",
    "test": "karma start ./karma.conf.js",
    "pree2e": "webdriver-manager update --standalone false --gecko false --quiet && npm run build",
    "e2e": "protractor ./protractor.conf.js",
    "postinstall-test": "electron-rebuild -f -w sqlite3,@paulcbetts/system-idle-time",
    "electron-rebuild": "electron-rebuild -f -w sqlite3,@paulcbetts/system-idle-time",
    "deb64": "npm run electron:linux && electron-installer-debian --src app-builds/trec-linux-x64/ --dest app-builds/installers/ --arch amd64 --options.depends=gconf-service,gconf-service-backend,gconf2-common,libgconf-2-4",
    "dmg": "npm run electron:mac && electron-installer-dmg app-builds/trec-darwin-x64/trec.app T-Rec --icon=./src/assets/trec-logo.png --overwrite --background=./src/assets/t-rec-bg.png"
  },
  "dependencies": {
    "@paulcbetts/system-idle-time": "^1.0.4",
    "copyfiles": "^2.3.0",
    "electron-notifications": "^1.0.0",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "@angular/animations": "^10.0.3",
    "@angular/common": "^10.0.3",
    "@angular/compiler": "^10.0.3",
    "@angular/compiler-cli": "^10.0.3",
    "@angular/core": "^10.0.3",
    "@angular/forms": "^10.0.3",
    "@angular/platform-browser": "^10.0.3",
    "@angular/platform-browser-dynamic": "^10.0.3",
    "@angular/platform-server": "^10.0.3",
    "@angular/router": "^10.0.3",
    "@angular/upgrade": "^10.0.3",
    "@ngtools/webpack": "^10.0.3",
    "@types/core-js": "~2.5",
    "@types/jasmine": "^3.5.11",
    "@types/node": "^10.12.30",
    "angular-router-loader": "~0.8",
    "angular2-template-loader": "~0.6",
    "awesome-typescript-loader": "~5.2",
    "babel-core": "~6.26",
    "babel-loader": "~7.1",
    "babel-preset-env": "~1.7",
    "clean-webpack-plugin": "~0.1",
    "core-js": "~2.5",
    "cross-env": "~5.2",
    "css-loader": "~1.0",
    "cssnano": "~4.1",
    "del-cli": "~1.1",
    "electron": "^9.1.1",
    "file-loader": "^6.0.0",
    "font-awesome": "^4.7.0",
    "html-loader": "~0.5",
    "html-webpack-plugin": "~3.2",
    "jasmine": "^3.5.0",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "~5.0",
    "rxjs": "~6.5",
    "rxjs-compat": "^6.6.0",
    "sass-loader": "~7.1",
    "style-loader": "~0.23",
    "to-string-loader": "~1.1",
    "typescript": "~3.9",
    "uglifyjs-webpack-plugin": "~2.1",
    "webpack": "~4.29",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "~4.2",
    "zone.js": "~0.10"
  },
  "license": "Apache-2.0"
}
